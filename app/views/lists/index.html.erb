<h1><%= fa_icon List.fa_icon_string %> Lists</h1>

<%= render partial: 'shared/nav_bar', locals: {current_page: 'List'} %>

<p>
  <%= link_to 'New List', new_list_path, class: 'action-buttons' %>
</p>

<%= render partial: 'sort' %>

<table>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.id %></td>
        <td><strong><%= list.name %></strong></td>
        <td>Contacts: <%= list.contacts.count %></td>
        <td>Correspondences: <%= list.correspondences.count %></td>
        <td style='width: 50px;'></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: "Are you sure you want to destroy list #{list.id}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
