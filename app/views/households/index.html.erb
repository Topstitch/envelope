<h1><%= fa_icon Household.fa_icon_string %> Households</h1>

<%= render partial: 'shared/nav_bar', locals: {current_page: 'Household'} %>

<p>
  <%= link_to 'New Household', new_household_path, class: 'action-buttons' %>
</p>

<%= render partial: 'sort' %>

<table>
  <tbody>
    <% @households.each do |household| %>
      <tr>
        <td><%= household.id %></td>
        <td><strong><%= household.name %></strong></td>
        <td><%= household.description %></td>
        <td>Contacts: <%= household.contacts.count %></td>
        <td>Addresses: <%= household.addresses.count %></td>
        <td><% if household.has_verified_address? %><%= verified_icon %><% else %><%= alert_icon %><% end %></td>
        <td style='width: 50px;'></td>
        <td><%= link_to 'Show', household %></td>
        <td><%= link_to 'Edit', edit_household_path(household) %></td>
        <td><%= link_to 'Destroy', household, method: :delete, data: { confirm: "Are you sure you want to destroy household #{household.id}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
