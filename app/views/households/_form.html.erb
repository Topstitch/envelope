      <ul>
      <% household.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <strong><%= f.label 'Name*' %></strong>
    <%= f.text_field :name %>
  </p>

  <p>
    <strong><%= f.label 'Address Stability Score*' %></strong>
    <%= f.number_field :address_stability_score, min: 0, max: 5%>
  </p>

  <p>
    <strong><%= f.label :description %></strong>
    <%= f.text_field :description %>
  </p>

  <p>
    <strong><%= f.label :notes %></strong>
    <%= f.text_area :notes, size: "60x12" %>
  </p>

  <p>
    <strong><%= f.label :anniversary %></strong>
    <%= date_select(:household, :anniversary, include_blank: true) %>
  </p>

  <div class="actions">
    <%= f.submit 'Submit', class: 'submit-button' %>
  </div>
<% end %>
