<% if notice %> 
  <p id="notice"><%= notice %></p>
<% end %>

<h1><%= fa_icon Address.fa_icon_string %> Addresses</h1>

<%= render partial: 'shared/nav_bar', locals: {current_page: 'Address'} %>

<p>
  <%= link_to 'New Address', new_address_path, class: 'action-buttons' %>
</p>

<%= render partial: 'sort' %>

<table>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.id %></td>
        <td><strong><%= address.recipient %></strong></td>
        <td><%= address.line_1 %></td>
        <td>Household: <%= address.household.name %></td>
        <td><% if address.the_verified_address? %><%= verified_icon %><% end %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: "Are you sure you want to destroy address #{address.id}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
